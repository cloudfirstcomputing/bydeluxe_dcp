<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="pdfDialog"
        title="PDF Preview"
        stretch="true"
        afterClose="onClosePdfDialog">
        <VBox>
            <PDFViewer id="pdfViewer" width="100%" height="100%"/>
        </VBox>
        <beginButton>
            <Button text="Close" press="onClosePdfDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>