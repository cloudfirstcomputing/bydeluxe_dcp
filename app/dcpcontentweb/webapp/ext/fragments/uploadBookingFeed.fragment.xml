<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified" xmlns:f="sap.ui.layout.form">
    <Dialog id="dialog" title="{i18n>dialogTitle}" contentWidth="760px">
        <content>
            <Panel id="panel" backgroundDesign="Transparent">
                <f:SimpleForm id="sf" layout="ResponsiveGridLayout" backgroundDesign="Transparent">
                    <Label id="label" text="{i18n>labelFileUploader}" class="sapUiTinyMarginTop" />
                    <u:FileUploader
                        id="FileUploadFileUploader"
                        name="FileUploadFileUploader"
                        placeholder="{i18n>placeholderFileUploader}"
                        tooltip="{i18n>tooltipFileUploader}"
                        style="Emphasized"
                        fileType="XLSX,xlsx"
                        width="90%"
                        buttonText="{i18n>browseBtn}"
                        icon="sap-icon://browse-folder"
                        iconFirst="false"
                        typeMissmatch="handleTypeMissmatch"
                        change="handleValueChange"
                        uploadComplete="handleUploadComplete"
                        sameFilenameAllowed="true"
                        class="sapUiTinyMarginEnd"
                    />
                </f:SimpleForm>
            </Panel>
        </content>
        <buttons>
            <Button id="downloadTemplateBtn" text="{i18n>downloadTemplateBtn}" class="sapUiTinyMarginEnd" iconFirst="false" type="Neutral" icon="sap-icon://download" press="handleDownloadTemplatePress" />
            <Button id="uploadBtn" text="{i18n>uploadBtn}" class="sapUiTinyMarginEnd" iconFirst="false" type="Emphasized" icon="sap-icon://upload" enabled="false" press="handleUploadPress" />
            <Button id="closeBtn" text="{i18n>closeBtn}" press="onCloseBtnPress" tooltip="{i18n>tooltipCloseBtn}" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>