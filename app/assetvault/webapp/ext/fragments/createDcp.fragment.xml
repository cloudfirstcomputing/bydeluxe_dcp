<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified" xmlns:f="sap.ui.layout.form">
    <Dialog id="dialog" title="{i18n>dialogTitle}" contentWidth="760px">
        <content>
            <Panel id="panel" backgroundDesign="Transparent">
                <f:SimpleForm id="sf" layout="ResponsiveGridLayout" backgroundDesign="Transparent">
                    <Label id="labelCustomer" text="{i18n>labelFileUploader}" class="sapUiTinyMarginTop" />
                    <ComboBox id="customer"
                        required="true"
                        items="{
                            path: '/Studios',
                            filters : [{ path : 'BusinessPartnerType', operator : 'EQ', value1 : 'Z001'}],
                            sorter: { path: 'BusinessPartner' }
                        }">
                        <core:Item key="{BusinessPartner}" text="{BusinessPartnerFullName}" />
                    </ComboBox>
                    <Label id="labelTitle" text="{i18n>labelFileUploader}" class="sapUiTinyMarginTop" />
                    <ComboBox id="title" required="true"
                        items="{
                            path: '/Titles',
                            sorter: { path: 'Product' }
                            }">
                        <core:Item key="{Product}" text="{Name}" />
                    </ComboBox>
                </f:SimpleForm>
            </Panel>
        </content>
        <buttons>
            <Button id="uploadBtn" text="{i18n>uploadBtn}" class="sapUiTinyMarginEnd" iconFirst="false" type="Emphasized" icon="sap-icon://upload" enabled="true" press="handleUploadPress" />
            <Button id="closeBtn" text="{i18n>closeBtn}" press="onCloseBtnPress" tooltip="{i18n>tooltipCloseBtn}" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>