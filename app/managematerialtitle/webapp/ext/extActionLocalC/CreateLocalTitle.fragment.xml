<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition    
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form">
    <Dialog id="productDialog"
            title="Create Local Title for {formModel>/OriginalTitleName}"
            stretch="false"
            >
        
        <VBox id="vboxContainerL">
            <f:SimpleForm id="simpleFormL"
                          layout="ResponsiveGridLayout"
                          editable="true">
                
                 <f:content>
                    <Label id="localCreate_OrgCre" text="Local ID"/>
                    <Input required="true" id="localCreate_inputOriginalTitleName" 
                           value="{formModel>/LocalTitleId}" 
                            editable="false"/>
                    <Label id="localCreate_lblOriginalRegionalTitle" text="Regional Title"/>
                    <Input  id="localCreate_inputOriginalRegionalTitle" 
                           value="{formModel>/RegionalTitleName}" 
                           change=".onValidateOriginalTitle" editable="true"/>
                    <Label id="localCreate_lblOriginalShortTitle" text="Short Title"/>
                    <Input  id="localCreate_inputOriginalShortTitle" 
                           value="{formModel>/ShortTitle}" 
                           change=".onValidateOriginalTitle" editable="true"/>
                    <Label id="localCreate_lblOriginalSecurityTitle" text="Security Title"/>
                    <Input  id="localCreate_inputOriginalSecurityTitle" 
                           value="{formModel>/SecurityTitle}" 
                           editable="true"/>

                    <Label id="localCreate_lblTitleType" text="Title Type"/>
                    <Select id="localCreate_selectEditTitletypeC" selectedKey="Local" editable="false">
                        <items>
                            <core:Item id="localCreate_itemEditTitleType2C" key="Parent" text="Parent"/>
                            <core:Item id="localCreate_itemEditTitleType1C" key="Local" text="Local"/>                            
                        </items>
                    </Select>

                    <Label id="localCreate_lblTitleCategory" text="Title Category" />
                    <Select id="localCreate_selectTitleCategory" selectedKey="{formModel>/TitleCategory}" editable="false">
                        <items>
                            <core:Item id="localCreate_itemTitleCategory1" key="Z007" text="Confirmed/Known Title"/>
                            <core:Item id="localCreate_itemTitleCategory2" key="Z006" text="Provisional/Unknown Title"/>
                        </items>
                    </Select>

                    <Label id="localCreate_lblRegionCode" text="Region Code"/>
                    <Input id="localCreate_inputRegionCode" placeholder="Enter country" value="{formModel>/RegionCode}" showValueHelp="true" valueHelpRequest="handleValueHelprc">
                        <suggestionItems>
				            <core:ListItem id="localCreate_Listitem" text="{code}" additionalText="{descr}" />
			            </suggestionItems>
		            </Input>

                    <Label id="localCreate_lblLanguageCode1" text="Language Code"/>
                    <Input id="localCreate_inputLanguageCode" placeholder="Enter Language" value="{formModel>/LanguageCode}" showValueHelp="true" valueHelpRequest="handleValueHelplg">
                        <suggestionItems>
				            <core:ListItem id="localCreate_Listitem1" text="{code}" additionalText="{descr}" />
			            </suggestionItems>
		            </Input>

                    <Label text="Release Date" labelFor="datePickerEditReleaseDate" />
                    <DatePicker 
                      id="datePickerEditReleaseDate01"
                      value="{path: 'formModel>/ReleaseDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy-MM-dd'}}"
                      displayFormat="yyyy-MM-dd" 
                    />

                    <Label text="Repertory Date" labelFor="datePickerRepertoryDate02" />
                    <DatePicker 
                      id="datePickerRepertoryDate2"
                      value="{path: 'formModel>/RepertoryDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy-MM-dd'}}"
                      displayFormat="yyyy-MM-dd" 
                    />

                    <Label id="localCreate_lblFormat1" text="Format"/>
                    <Select id="localCreate_selectFormat" selectedKey="{formModel>/Format}">
                        <items>
                            <core:Item id="localCreate_itemFormat1" key="2D" text="2D"/>
                            <core:Item id="localCreate_itemFormat2" key="3D" text="3D"/>
                        </items>
                    </Select>

                    <Label id="lblReleaseSize" text="Release Size"/>
                    <Select id="selectReleaseSize" selectedKey="{formModel>/ReleaseSize}">
                        <items>
                            <core:Item id="itemReleaseSize1" key="Wide" text="Wide"/>
                            <core:Item id="itemReleaseSize2" key="Tentpole" text="Tentpole"/>
                        </items>
                    </Select>

                    <Label id="localCreate_lblUseSecureName" text="Use Secure Name"/>
                    <Select id="localCreate_selectUseSecureName" selectedKey="{formModel>/UseSecureName}">
                        <items>
                              <core:Item id="_IDGenItem" key="Yes" text="Yes"/>
                              <core:Item id="_IDGenItem1" key="No" text="No"/>
                        </items>
                    </Select>

                    <Label id="localCreate_lblRatings1" text="Ratings"/>
                    <Input id="localCreate_inputRatings" value="{formModel>/Ratings}"/>

                    <Label id="localCreate_lblAssetVaultTitleId1" text="Asset Vault Title Id"/>
                    <Input id="localCreate_inputAssetVaultTitleId" value="{formModel>/AssetVaultTitleId}"/>

                    <Label id="localCreate_lblImdbId1" text="IMDB ID"/>
                    <Input id="localCreate_inputImdbId" value="{formModel>/ImdbId}"/>

                    <Label id="localCreate_lblStudioTitleId1" text="Studio Title Id"/>
                    <Input id="localCreate_inputStudioTitleId" value="{formModel>/StudioTitleId}"/>

                    <Label id="localCreate_lblGofilexTitleId" text="Gofilex Title Id"/>
                    <Input id="localCreate_inputGofilexTitleId" value="{formModel>/GofilexTitleId}" />

                    <Label id="localCreate_lblStudioDistributor1" text="Studio/Distributor"/>
                    <Input id="localCreate_inputStudioDistributor" value="{formModel>/StudioDistributor}" showValueHelp="true" valueHelpRequest="handleValueHelp"/>
                </f:content>
            </f:SimpleForm>
        </VBox>
        
        <buttons>
            <Button id="btnCancelL" text="Cancel" press="onCancel"/>
            <Button id="btnSaveL" text="Save" type="Emphasized" press="onSaveLineItem"/>
        </buttons>
        
    </Dialog>
</core:FragmentDefinition>
