<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog
    id="uploadSummaryDialog"
    resizable="true"
    contentWidth="440px"
    contentHeight="440px"
    verticalScrolling="false"
    draggable="true"
    title="Upload Summary"> 
   

    <MessageView
      id="uploadSummaryMessageView"
      showDetailsPageHeader="true"
      items="{
        path: 'uploadSummary>/results'
      }">
      <items>
        <MessageItem id="_IDGenMessageItem"
          type="{uploadSummary>type}"
      title="{uploadSummary>title}"
      description="{uploadSummary>description}"
      subtitle="{uploadSummary>subtitle}"
      counter="{uploadSummary>counter}" />
      </items>
    </MessageView>

    <endButton>
      <Button id="_IDGenButton"
        text="Close"
        press=".onCancelSummary" />
    </endButton>

  </Dialog>
</core:FragmentDefinition>
