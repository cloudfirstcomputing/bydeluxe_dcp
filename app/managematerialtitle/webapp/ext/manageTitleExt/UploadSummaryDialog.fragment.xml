<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog
    id="uploadSummaryDialog"
    resizable="true"
    contentHeight="40%"
    contentWidth="30%"
    verticalScrolling="false"
    draggable="true"
    title="Upload Summary"> 
   

    <MessageView
      id="uploadSummaryMessageView"
      showDetailsPageHeader="true"
      items="{
        path: '/'
      }">
      <items>
        <MessageItem id="_IDGenMessageItem"
          type="{type}"
          title="{title}"
          description="{description}"
          subtitle="{subtitle}"
          counter="{counter}" />
      </items>
    </MessageView>

    <endButton>
      <Button id="_IDGenButton"
        text="Close"
        press=".onCancelSummary" />
    </endButton>

  </Dialog>
</core:FragmentDefinition>
