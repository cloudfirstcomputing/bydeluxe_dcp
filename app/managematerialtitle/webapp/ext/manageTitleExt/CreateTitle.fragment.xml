<core:FragmentDefinition    
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog id="addLineItemDialog"
            title="Create New Title"
            stretch="false"
            contentWidth="40%">
        
        <VBox id="vboxContainerTitle">
            <f:SimpleForm id="simpleFormTitle"
                          layout="ResponsiveGridLayout"
                          editable="true">
                
                <f:content>
                    <!-- <Label id="lblTitleName" text="Title Name"/>
                    <Input id="inputTitleName"/>
                    
                    <Label id="lblTitleDescription" text="Title Description"/>
                    <Input id="inputTitleDescription"/>
                    
                    <Label id="lblProductDescription1" text="Product Description"/>
                    <Input id="inputProductDescription"/> -->
                    <Label id="lblOriginalTitleName" text="Original Title Name"/>
                    <Input required="true" id="inputOriginalTitleName" value="{formModel>/OriginalTitleName}" change=".onValidateOriginalTitle"/>                    

                    <Label id="lblTitleCategory" text="Title Category"/>
                    <Select id="selectTitleCategory" selectedKey="{formModel>/TitleCategory}">
                        <items>
                            <core:Item id="itemTitleCategory1" key="Z007" text="Confirmed/Known Title"/>
                            <core:Item id="itemTitleCategory2" key="Z006" text="Provisional/Unknown Title"/>
                        </items>
                    </Select>

                    <Label id="lblRegionCode" text="Region Code"/>
                     <Input id="inputRegionCode" placeholder="Enter country" value="{formModel>/RegionCode}" showValueHelp="true" valueHelpRequest="handleValueHelprc">
                        <suggestionItems>
				            <core:ListItem id="_IDGenListItem1" text="{code}" additionalText="{descr}" />
			            </suggestionItems>
		            </Input>

                    <Label id="lblLanguageCode1" text="Language Code"/>
                    <Input id="inputLanguageCode" placeholder="Enter Language" value="{formModel>/LanguageCode}"  showValueHelp="true" valueHelpRequest="handleValueHelplg">
                        <suggestionItems>
				            <core:ListItem id="_IDGenListItem" text="{code}" additionalText="{descr}" />
			            </suggestionItems>
		            </Input>

                    <Label text="Release Date" labelFor="datePickerEditReleaseDate" />
                    <DatePicker 
                      id="datePickerEditReleaseDate04"
                      value="{path: 'formModel>/ReleaseDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy-MM-dd'}}"
                      displayFormat="yyyy-MM-dd" 
                    />

                    <Label text="Repertory Date" labelFor="datePickerRepertoryDate02" />
                    <DatePicker 
                      id="datePickerRepertoryDate05"
                      value="{path: 'formModel>/RepertoryDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy-MM-dd'}}"
                      displayFormat="yyyy-MM-dd" 
                    />


                    <Label id="lblFormat1" text="Format"/>
                    <Select id="selectFormat" selectedKey="{formModel>/Format}">
                        <items>
                            <core:Item id="itemFormat1" key="2D" text="2D"/>
                            <core:Item id="itemFormat2" key="3D" text="3D"/>
                        </items>
                    </Select>

                    <Label id="lblReleaseSize1" text="Release Size"/>
                    <Select id="selectReleaseSize1" selectedKey="{formModel>/ReleaseSize}">
                        <items>
                            <core:Item id="itemReleaseSize01" key="Wide" text="Wide"/>
                            <core:Item id="itemReleaseSize02" key="Tentpole" text="Tentpole"/>
                        </items>
                    </Select>

                    <Label id="localCreate_lblUseSecureName01" text="Use Secure Name"/>
                    <Select id="localCreate_selectUseSecureName02" selectedKey="{formModel>/UseSecureName}">
                        <items>
                              <core:Item id="_IDGenItem01" key="Yes" text="Yes"/>
                              <core:Item id="_IDGenItem102" key="No" text="No"/>
                        </items>
                    </Select>

                    <Label id="localCreate_lblSecurityTitleC" text="Security Title"/>
                    <Input id="localCreate_inputSecurityTitleC" value="{formModel>/SecurityTitle}" editable="true"/>

                    <Label id="lblRatings1" text="Ratings"/>
                    <Input id="inputRatings" value="{formModel>/Ratings}"/>

                    <Label id="lblAssetVaultTitleId1" text="Asset Vault Title Id"/>
                    <Input id="inputAssetVaultTitleId" value="{formModel>/AssetVaultTitleId}"/>

                    <Label id="lblGofilexTitleId" text="Gofilex Title Id"/>
                    <Input id="inputGofilexTitleId" value="{formModel>/GofilexTitleId}"/>

                    <Label id="lblImdbId1" text="IMDB ID"/>
                    <Input id="inputImdbId" value="{formMexportodel>/ImdbId}"/>

                    <Label id="lblStudioTitleId1" text="Studio Title Id"/>
                    <Input id="inputStudioTitleId" value="{formModel>/StudioTitleId}"/>

                    <Label id="lblStudioDistributor1" text="Studio/Distributor"/>
                    <Input id="inputStudioDistributor" value="{formModel>/StudioDistributor}" showValueHelp="true" valueHelpRequest="handleValueHelp"/>
                </f:content>
            </f:SimpleForm>
        </VBox>
        
        <buttons>
            <Button id="btnCancelTitle" text="Cancel" press="onCancelCreate"/>
            <Button id="btnSaveTitle" text="Save" type="Emphasized" press="onSaveCreate"/>
        </buttons>
        
    </Dialog>
</core:FragmentDefinition>
