<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:u="sap.ui.unified">
  <Dialog
    id="uploadDialog"
    title="Upload File"
    draggable="true"
    resizable="true"
    contentWidth="400px"
    contentHeight="200px">

    <VBox id="uploadVBox" class="sapUiSmallMargin">
      <u:FileUploader
        id="fileUploader"
        name="excelUpload"
        tooltip="Upload your Excel file"
        change="onFileChange"
        uploadComplete="onUploadComplete"
        fileType="xlsx,xls"
        style="Emphasized"
        width="100%" />
    </VBox>

    <buttons>
      <Button
        id="btnDownloadTemplate"
        type="Transparent"
        icon="sap-icon://download"
        text="Download Template"
        press="onDownloadTemplate" />

      <Button
        id="btnUpload"
        type="Emphasized"
        icon="sap-icon://upload"
        text="Upload"
        press="onConfirmUpload" />

      <Button
        id="btnCancel"
        type="Transparent"
        text="Cancel"
        press="onCancelUpload" />
    </buttons>
  </Dialog>
</core:FragmentDefinition>
