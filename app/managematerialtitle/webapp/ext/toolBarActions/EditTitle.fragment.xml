<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog id="editLineItemDialog"
            title="Edit Title"
            stretch="false"
            contentWidth="40%">
        
        <VBox id="vboxContainerEditTitle">
            <f:SimpleForm id="simpleFormEditTitle"
                          layout="ResponsiveGridLayout"
                          editable="true">
                
                <f:content>
                    <Label id="lblEditOriginalTitleName" text="Original Title Name"/>
                    <Input id="inputEditOriginalTitleName" value="{formModel>/OriginalTitleName}" editable="{= ${formModel>/TitleType} === 'Parent' }"/>

                    <Label id="lblEdit_lblOriginalRegionalTitle" text="Regional Title Name" visible="{= ${formModel>/TitleType} !== 'Parent' }"/>
                    <Input  id="lblEdit_inputOriginalRegionalTitle" 
                           value="{formModel>/RegionalTitleName}" 
                           change=".onValidateOriginalTitle" editable="true" visible="{= ${formModel>/TitleType} !== 'Parent' }"/>
                    <Label id="lblEdit_lblOriginalShortTitle" text="Short Title Name"/>
                    <Input  id="lblEdit_inputOriginalShortTitle" 
                           value="{formModel>/ShortTitle}" 
                           change=".onValidateOriginalTitle" editable="true"/>
                    
                    <Label id="lblEditTitleTypey" text="Title Type"/>
                    <Select id="selectEditTitletype" selectedKey="{formModel>/TitleType}" editable="false">
                        <items>
                            <core:Item id="itemEditTitleType2" key="Parent" text="Parent"/>
                            <core:Item id="itemEditTitleType1" key="Local" text="Local"/>                            
                        </items>
                    </Select>

                    <Label id="lblEditTitleCategory" text="Title Category"/>
                    <Select id="selectEditTitleCategory" selectedKey="{formModel>/TitleCategory}">
                        <items>
                            <core:Item id="itemEditTitleCategory1" key="Z007" text="Confirmed/Known Title"/>
                            <core:Item id="itemEditTitleCategory2" key="Z006" text="Provisional/Unknown Title"/>
                        </items>
                    </Select>

                    <Label id="lblEditRegionCode" text="Region Code"/>
                    <Input id="inputEditRegionCode" placeholder="Enter country" value="{formModel>/RegionCode}" showValueHelp="true" valueHelpRequest="handleValueHelprc">
                        <suggestionItems>
				            <core:ListItem id="_IDGenListItem2" text="{code}" additionalText="{descr}" />
			            </suggestionItems>
		            </Input>

                    <Label id="lblEditLanguageCode" text="Language Code"/>
                    
                    <Input id="inputEditLanguageCode" placeholder="Enter Language" value="{formModel>/LanguageCode}" showValueHelp="true" valueHelpRequest="handleValueHelplg">
                        <suggestionItems>
				            <core:ListItem id="_IDGenListItem3" text="{code}" additionalText="{descr}" />
			            </suggestionItems>
		            </Input>
                    
                    <Label text="Release Date" labelFor="datePickerEditReleaseDate" />
                    <DatePicker 
                      id="datePickerEditReleaseDate02"
                      value="{path: 'formModel>/ReleaseDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy-MM-dd'}}"
                      displayFormat="yyyy-MM-dd" 
                    />

                    <Label text="Repertory Date" labelFor="datePickerRepertoryDate02" />
                    <DatePicker 
                      id="datePickerRepertoryDate03"
                      value="{path: 'formModel>/RepertoryDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy-MM-dd'}}"
                      displayFormat="yyyy-MM-dd" 
                    />



                    <Label id="lblEditFormat" text="Format"/>
                    <Select id="selectEditFormat" selectedKey="{formModel>/Format}">
                        <items>
                            <core:Item id="itemEditFormat1" key="2D" text="2D"/>
                            <core:Item id="itemEditFormat2" key="3D" text="3D"/>
                        </items>
                    </Select>

                    <Label id="lblReleaseSize01" text="Release Size"/>
                    <Select id="selectReleaseSize02" selectedKey="{formModel>/ReleaseSize}">
                        <items>
                            <core:Item id="itemReleaseSize03" key="Wide" text="Wide"/>
                            <core:Item id="itemReleaseSize04" key="Tentpole" text="Tentpole"/>
                        </items>
                    </Select>

                    <Label id="localCreate_lblUseSecureName03" text="Use Secure Name"/>
                    <Select id="localCreate_selectUseSecureName04" selectedKey="{formModel>/UseSecureName}">
                        <items>
                              <core:Item id="_IDGenItem03" key="Yes" text="Yes"/>
                              <core:Item id="_IDGenItem104" key="No" text="No"/>
                        </items>
                    </Select>

                    <Label id="localCreate_lblSecurityTitleC01" text="Security Title"/>
                    <Input id="localCreate_inputSecurityTitleC02" value="{formModel>/SecurityTitle}" editable="true"/>

                    <Label id="lblEditRatings" text="Ratings"/>
                    <Input id="inputEditRatings" value="{formModel>/Ratings}"/>

                    <Label id="lblEditAssetVaultTitleId" text="Asset Vault Title Id"/>
                    <Input id="inputEditAssetVaultTitleId" value="{formModel>/AssetVaultTitleId}"/>

                    <Label id="lblGofilexTitleId01" text="Gofilex Title Id"/>
                    <Input id="inputGofilexTitleId02" value="{formModel>/GofilexTitleId}"/>

                    <Label id="lblEditImdbId" text="IMDB ID"/>
                    <Input id="inputEditImdbId" value="{formModel>/ImdbId}"/>

                    <Label id="lblEditStudioTitleId" text="Studio Title Id"/>
                    <Input id="inputEditStudioTitleId" value="{formModel>/StudioTitleId}"/>

                    <Label id="lblEditStudioDistributor" text="Studio/Distributor"/>
                    <Input id="inputEditStudioDistributor" value="{formModel>/StudioDistributor}" showValueHelp="true" valueHelpRequest="handleValueHelp"/>
                </f:content>
            </f:SimpleForm>
        </VBox>
        
        <buttons>
            <Button id="btnCancelEditTitle" text="Cancel" press="onCancelEdit"/>
            <Button id="btnSaveEditTitle" text="Save" type="Emphasized" press="onSaveEdit"/>
        </buttons>
        
    </Dialog>
</core:FragmentDefinition>